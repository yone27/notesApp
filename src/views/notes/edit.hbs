{{#each errors}}
    <p>
        {{text}}
    </p>
{{/each}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" placeholder="title" value="{{note.title}}" name="title" class="form-control" autofocus> 
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Edit</button>
                </div>
            </form>
        </div>
    </div>

</div>