<div class="ror">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{name}}" class="form-control" name="name" placeholder="name"> 
                    </div>
                    <div class="form-group">
                        <input type="email" value="{{email}}" class="form-control" name="email" placeholder="email"> 
                    </div>
                    <div class="form-group">
                        <input type="password" value="{{password}}" class="form-control" name="password" placeholder="password"> 
                    </div>
                    <div class="form-group">
                        <input type="password" value="{{passwordConfirm}}" class="form-control" name="passwordConfirm" placeholder="confirm password"> 
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primay btn-block">sing up</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>